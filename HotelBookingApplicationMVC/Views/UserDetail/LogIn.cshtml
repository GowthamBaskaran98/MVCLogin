@model HotelBookingApplicationMVC.Entity.User

@{
    ViewBag.Title = "LogIn";
}

@using (Html.BeginForm("LogIn", "UserDetail", FormMethod.Post))
{
    <table cellpadding="20">
        <tr>
            <td>
                @Html.LabelFor(Model => Model.gmail)
            </td>
            <td>
                @Html.TextBoxFor(Model => Model.gmail)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(Model => Model.password)
            </td>
            <td>
                @Html.EditorFor(Model => Model.password)
            </td>
        </tr>
        <tr>
            <td>
                @Html.ActionLink("Back", "Create")
            </td>
            <td>
                <input type="submit"/>
            </td>
        </tr>
    </table>
}